# =============================================
# BANCO DE DADOS
# =============================================
DATABASE_URL="postgresql://usuario:senha@localhost:5432/checkout_platform?schema=public"

# =============================================
# AUTENTICAÇÃO (NextAuth.js)
# =============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="gerar_com_openssl_rand_base64_32"

# =============================================
# EMAIL (SMTP)
# =============================================
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="465"
SMTP_USER="seu_email@seudominio.com"
SMTP_PASS="sua_senha_segura"
SMTP_FROM_EMAIL="noreply@seudominio.com"
SMTP_FROM_NAME="Sua Plataforma"
SMTP_SECURE="true"

# =============================================
# MERCADO PAGO (Credenciais do Admin para SaaS)
# =============================================
# IMPORTANTE: Não commitar credenciais reais!
# Estas são usadas apenas se o SaaS estiver habilitado
MERCADOPAGO_ACCESS_TOKEN=""
MERCADOPAGO_PUBLIC_KEY=""

# =============================================
# PUSHINPAY (Credenciais do Admin para SaaS)
# =============================================
PUSHINPAY_TOKEN=""

# =============================================
# APLICAÇÃO
# =============================================
NEXT_PUBLIC_APP_NAME="Checkout Platform"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================
# UPLOADS
# =============================================
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE="10485760"

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# =============================================
# PWA / VAPID (Push Notifications)
# =============================================
# Gerar com: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_SUBJECT="mailto:admin@seudominio.com"

# =============================================
# SENTRY (Monitoramento de Erros - Opcional)
# =============================================
SENTRY_DSN=""

# =============================================
# AMBIENTE
# =============================================
NODE_ENV="development"
